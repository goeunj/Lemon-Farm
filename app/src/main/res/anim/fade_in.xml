<?xml version="1.0" encoding="utf-8"?>

<!--referred to animation from 'developer.android.com'-->

<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha android:toAlpha="1.0" android:fromAlpha="-0.1" android:duration="3000"/>

    <rotate android:interpolator="@android:anim/cycle_interpolator"
        android:duration="1500"
        android:repeatCount="6"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="0"/>
</set>